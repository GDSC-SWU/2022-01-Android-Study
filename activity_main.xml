                        android:layout_width="250dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/box_round_line"
                        android:padding="20dp">

                        <ImageButton
                            android:id="@+id/main_middle_first_content1_main_icon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_study" />

                        <TextView
                            android:id="@+id/main_middle_first_content1_title"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/main_middle_first_content1_main_icon"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="교내 스터디 구하는 법을 알려드릴게요!"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/main_middle_first_content1_sub_title"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/main_middle_first_content1_title"
                            android:layout_alignLeft="@+id/main_middle_first_content1_title"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="우리 학교에는 어떤 스터디가 있는지 어쩌구"
                            android:textColor="#FFCE22"
                            android:textSize="13sp" />

                        <ImageButton
                            android:id="@+id/main_middle_first_content1_plus_image"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/main_middle_first_content1_sub_title"
                            android:layout_alignLeft="@+id/main_middle_first_content1_title"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerInside"
                            android:src="@drawable/image_more" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/main_middle_first_content2"
                        android:layout_width="250dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/main_middle_first_content1"
                        android:background="@drawable/box_round_line"
                        android:padding="20dp">

                        <ImageButton
                            android:id="@+id/main_middle_first_content2_main_icon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_checkbox" />

                        <TextView
                            android:id="@+id/main_middle_first_content2_title"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/main_middle_first_content2_main_icon"
                            android:ellipsize="end"
                            android:maxLines="1"
