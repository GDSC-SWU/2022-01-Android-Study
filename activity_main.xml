<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/main_top_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="에브리타임"
            android:textColor="#C62917"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/univ_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_name"
            android:layout_marginTop="5dp"
            android:text="서울여대"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/icon_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/univ_name"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/icon_search" />

        <ImageButton
            android:id="@+id/icon_my"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/univ_name"
            android:layout_toLeftOf = "@+id/icon_search"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/icon_my" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/main_middle_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_top_tab"
        android:layout_above="@+id/main_bottom_tab"
        android:orientation="horizontal">
